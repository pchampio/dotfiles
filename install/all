#!/usr/bin/env bash


BASEDIR="$(dirname "$0")"
. "$BASEDIR/inc/functions"

## Mendatory for me
"$BASEDIR/dotfiles"
"$BASEDIR/zsh"
"$BASEDIR/github_app"
"$BASEDIR/pinentry-tty"
"$HOME/dotfiles/bin/rbw" unlock && success "[RBW] Unlocked"
# Should not require input
"$BASEDIR/neovim"
"$BASEDIR/secrets"
"$BASEDIR/python"
"$BASEDIR/node"
"$BASEDIR/tmux"
"$BASEDIR/git"


read -p "Install optional (junest) watchman/java bins [y]" -n 1 -r
echo ""    # (optional) move to a new line
if [[ $REPLY =~ ^[Yy]$ ]]; then
  # Nice to have (junest bins)
  "$BASEDIR/junest"
  "$BASEDIR/watchman"
  "$BASEDIR/java"
fi
