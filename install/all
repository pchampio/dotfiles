#!/usr/bin/env bash


BASEDIR="$(dirname "$0")"
. "$BASEDIR/inc/functions"

### Mendatory apps ###
"$BASEDIR/github_app"
"$BASEDIR/zsh"
"$BASEDIR/dotfiles"
"$BASEDIR/pinentry-tty"
"$HOME/.local/bin/zsh" -ic "$HOME/dotfiles/bin/rbw unlock" && success "[RBW] Unlocked"
# Should not require user input anymore
"$BASEDIR/neovim"
"$BASEDIR/secrets"
"$BASEDIR/python"
"$BASEDIR/node"
"$BASEDIR/tmux"
"$BASEDIR/git"

explain "\n\nCTRL-C now to abort optional installations."
sleep 5

### Nice to have (junest bins) ###
"$BASEDIR/junest"
"$BASEDIR/watchman"
"$BASEDIR/java"
