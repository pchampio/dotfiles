    "maintitle": false,
    "journal": false,
    "title": false,
    "booktitle": false
  },
  "ltex.checkFrequency": "save",
  "ltex.completionEnabled": true,
  "workbench.activityBar.visible": false,
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizing": "shrink",
