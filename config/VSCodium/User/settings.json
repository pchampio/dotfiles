{
    "workbench.colorTheme": "Solarized Light",
    "latex-workshop.view.pdf.viewer": "tab",
    "vscode-neovim.neovimExecutablePaths.linux": "~/dotfiles/bin/nvim-linux64/bin/nvim",
    "keyboard.dispatch": "keyCode",
    "vscode-neovim.mouseSelectionStartVisualMode": true,
    "editor.cursorBlinking": "solid",
    "ltex.diagnosticSeverity": "information",
    "git.autofetch": true,
    "files.autoSave": "onWindowChange",
    "editor.minimap.enabled": false,
    "pasteImage.showFilePathConfirmInputBox": true,
    "explorer.confirmDragAndDrop": false,
    "pasteImage.defaultName": "ss",
    "ltex.dictionary": {

    },
    "grammarly.config.suggestions.InformalPronounsAcademic": true,
    "grammarly.files.include": [
        "**/readme.md",
        "**/README.md",
        "**/*.txt",
        "**/*.tex",
        "**/**/*.tex"
    ],
    "window.titleBarStyle": "custom",
    "window.customMenuBarAltFocus": false,
    "window.enableMenuBarMnemonics": false,
    "git.confirmSync": false,
    "altervista-thesaurus.key": "NGAlOlyH0Oj07rCoNj1L",
    "deepl.apiKey": null,
    "grammarly.config.documentDomain": "academic",
    "grammarly.config.suggestions.ConjunctionAtStartOfSentence": true,
    "grammarly.config.suggestions.PrepositionAtTheEndOfSentence": true,
    "editor.wordWrap": "on",
      "customizeUI.stylesheet": {
    "div.monaco-split-view2.horizontal.separator-border div.title-actions": "display: none !important;",
