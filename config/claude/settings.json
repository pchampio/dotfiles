{
  "env": {
    "MAX_THINKING_TOKENS": "31999"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Read(~/.zshrc)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(diff:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(lua:*)",
      "Bash(cat:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(wezterm:*)",
      "Bash(docker compose:*)",
      "Bash(docker compose exec:*)",
      "Bash(docker compose logs:*)",
      "Bash(git commit:*)",
      "Edit",
      "Read",
      "Create",
      "Write",
      "MultiEdit",
      "NotebookEdit",
      "Fetch",
      "mcp__context7",
      "mcp__chrome-devtools",
      "mcp__serena",
      "mcp__gemini-cli",
      "mcp__aws-cdk-mcp-server",
      "mcp__aws-documentation-mcp-server",
      "mcp__playwright"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Bash(npm uninstall:*)",
      "Bash(npm remove:*)"
    ],
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "title='Claude'; msg=$(basename \"$PWD\"); full_msg=\"$title — $msg\"; printf '\\033Ptmux;\\033\\033]1337;SetUserVar=%s=%s\\007\\033\\\\' wez_notif $(printf '%s' \"$full_msg\" | base64 -w0)"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "title='Claude Notification'; msg=$(basename \"$PWD\"); full_msg=\"$title — $msg\"; printf '\\033Ptmux;\\033\\033]1337;SetUserVar=%s=%s\\007\\033\\\\' wez_notif $(printf '%s' \"$full_msg\" | base64 -w0)"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx ccusage@latest statusline"
  },
  "temperature": 0,
  "preferences": {
    "language": "en",
  }
}
