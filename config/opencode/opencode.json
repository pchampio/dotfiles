{
  "$schema": "https://opencode.ai/config.json",
    "autoupdate": false,
    "theme": "solarized",
    "autoshare": false,
    "autoupdate": true,
    "formatter": false,
    "tui": {
    "scroll_speed": 5,
    "scroll_acceleration": {
      "enabled": false
      }
    },
    "keybinds": {
      "leader": "ctrl+x",
      "session_new": "ctrl+n",
      "messages_page_up": "alt+k",
      "messages_page_down": "alt+j",
      "messages_copy": "ctrl+y",
      "messages_undo": "ctrl+u",
      "messages_redo": "ctrl+r",
      "input_newline": "<leader>enter,shift+alt+enter",
    },
    "mcp": {
      "beads-mcp": {
        "enabled": true,
        "type": "local",
        "command": [
          "beads-mcp"
        ]
      },
      "context7": {
        "type": "remote",
        "enabled": true,
        "url": "https://mcp.context7.com/mcp"
      }
  }
}
